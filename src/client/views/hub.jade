.container
  .row
    .col-md-9
      h3 Server List
      table.col-md-12.table-hover.table-striped
        thead
          tr
            th Nombre
            th Jugadores
            th Dificultad
            th Ronda
            th
        tbody
          tr.server-info(ng-repeat="room in rooms")
            td {{room.name}}
            td {{room.currentUsers}}/{{room.maxUsers}}
            td(ng-class="{'text-easy': room.level === 0, 'text-normal': room.level === 1, 'text-danger': room.level === 2}")
              | {{levelNames[room.level]}}
            td 1/3
            td 
              span(id="room-{{$index}}" ng-click="joinToRoom(room.name)") Join
            

    .col-md-3
      h3 Create Room
      .content-limits 
        .btn-group-horizontal
          .btn.btn-default.col-md-12(id="newRoom") New room
          //.btn.btn-default.col-md-12 Private Room
